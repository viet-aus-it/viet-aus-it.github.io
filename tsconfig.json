{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsxdev",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
